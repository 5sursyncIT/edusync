    </data>
    <!-- Modèle de page web -->
    <template id="school_index" name="School Management Main Page">
        <t t-call="website.layout">
            <div class="container mt-4">
                <div class="jumbotron">
                    <h1 class="display-4">Système de Gestion Scolaire</h1>
                    <p class="lead">Bienvenue sur le système de gestion scolaire.</p>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Étudiants</h5>
                                <p class="card-text">Gestion des dossiers étudiants, inscriptions et suivis.</p>
                                <a href="/web#action=school_management.action_student_view" class="btn btn-primary">Accéder</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Enseignants</h5>
                                <p class="card-text">Gestion du personnel enseignant et attribution des cours.</p>
                                <a href="/web#action=school_management.action_teacher_view" class="btn btn-primary">Accéder</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Cours</h5>
                                <p class="card-text">Organisation des cours, planification et ressources.</p>
                                <a href="/web#action=school_management.action_course_view" class="btn btn-primary">Accéder</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
