<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue formulaire pour les étudiants -->
        <record id="view_op_student_form_inherit" model="ir.ui.view">
            <field name="name">op.student.form.inherit</field>
            <field name="model">op.student</field>
            <field name="inherit_id" ref="openeducat_core.view_op_student_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Informations supplémentaires">
                        <group>
                            <field name="user_id"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Action pour accéder aux étudiants -->
        <record id="action_student_view" model="ir.actions.act_window">
            <field name="name">Étudiants</field>
            <field name="res_model">op.student</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier étudiant
                </p>
            </field>
        </record>

